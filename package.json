  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "dts-bundle-generator": "^2.1.0",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.4",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
